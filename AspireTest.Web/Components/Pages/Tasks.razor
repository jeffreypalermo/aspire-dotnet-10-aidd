@page "/tasks"
@using AspireTest.Web
@inject TaskApiClient TaskClient
@rendermode InteractiveServer

<PageTitle>Task Manager</PageTitle>

<h1>Task Manager</h1>

<div class="mb-4">
    <button class="btn btn-primary" @onclick="ShowAddTaskForm">Add New Task</button>
</div>

@if (showAddForm)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@(editingTask?.Id > 0 ? "Edit Task" : "Add New Task")</h5>
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" @bind="newTaskTitle" />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" rows="3" @bind="newTaskDescription"></textarea>
            </div>
            <button class="btn btn-success" @onclick="SaveTask">Save</button>
            <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
        </div>
    </div>
}

@if (tasks == null)
{
    <p><em>Loading tasks...</em></p>
}
else if (tasks.Length == 0)
{
    <p><em>No tasks found. Create your first task above!</em></p>
}
else
{
    <div class="row">
        @foreach (var task in tasks)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card @(task.IsCompleted ? "border-success" : "")">
                    <div class="card-body">
                        <h5 class="card-title">
                            @if (task.IsCompleted)
                            {
                                <span class="badge bg-success me-2">Completed</span>
                            }
                            @task.Title
                        </h5>
                        <p class="card-text">@task.Description</p>
                        <p class="text-muted small">
                            Created: @task.CreatedDate.ToLocalTime().ToString("g")
                        </p>
                        @if (task.CompletedDate.HasValue)
                        {
                            <p class="text-muted small">
                                Completed: @task.CompletedDate.Value.ToLocalTime().ToString("g")
                            </p>
                        }
                        <div class="btn-group" role="group">
                            @if (!task.IsCompleted)
                            {
                                <button class="btn btn-sm btn-success" @onclick="() => ToggleTaskCompletion(task)">
                                    Mark Complete
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-warning" @onclick="() => ToggleTaskCompletion(task)">
                                    Mark Incomplete
                                </button>
                            }
                            <button class="btn btn-sm btn-primary" @onclick="() => EditTask(task)">Edit</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteTask(task.Id)">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private TaskItem[]? tasks;
    private bool showAddForm = false;
    private string newTaskTitle = string.Empty;
    private string? newTaskDescription;
    private TaskItem? editingTask;

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        tasks = await TaskClient.GetTasksAsync();
    }

    private void ShowAddTaskForm()
    {
        showAddForm = true;
        editingTask = null;
        newTaskTitle = string.Empty;
        newTaskDescription = null;
    }

    private void EditTask(TaskItem task)
    {
        editingTask = task;
        newTaskTitle = task.Title;
        newTaskDescription = task.Description;
        showAddForm = true;
    }

    private void CancelEdit()
    {
        showAddForm = false;
        editingTask = null;
        newTaskTitle = string.Empty;
        newTaskDescription = null;
    }

    private async Task SaveTask()
    {
        if (string.IsNullOrWhiteSpace(newTaskTitle))
            return;

        if (editingTask?.Id > 0)
        {
            // Update existing task
            editingTask.Title = newTaskTitle;
            editingTask.Description = newTaskDescription;
            await TaskClient.UpdateTaskAsync(editingTask.Id, editingTask);
        }
        else
        {
            // Create new task
            var newTask = new TaskItem
            {
                Title = newTaskTitle,
                Description = newTaskDescription,
                CreatedDate = DateTime.UtcNow
            };
            await TaskClient.CreateTaskAsync(newTask);
        }

        showAddForm = false;
        editingTask = null;
        newTaskTitle = string.Empty;
        newTaskDescription = null;
        await LoadTasks();
    }

    private async Task ToggleTaskCompletion(TaskItem task)
    {
        task.IsCompleted = !task.IsCompleted;
        task.CompletedDate = task.IsCompleted ? DateTime.UtcNow : null;
        await TaskClient.UpdateTaskAsync(task.Id, task);
        await LoadTasks();
    }

    private async Task DeleteTask(int id)
    {
        await TaskClient.DeleteTaskAsync(id);
        await LoadTasks();
    }
}
