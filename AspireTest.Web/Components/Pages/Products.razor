@page "/products"
@using AspireTest.Web.Data
@using AspireTest.Web.Models
@using Microsoft.EntityFrameworkCore
@inject CatalogDbContext DbContext
@rendermode InteractiveServer

<PageTitle>Product Catalog</PageTitle>

<h1>Product Catalog</h1>
<p class="text-muted">Products stored in SQL Server</p>

@if (products == null)
{
    <p><em>Loading products...</em></p>
}
else if (products.Count == 0)
{
    <p><em>No products found in the catalog.</em></p>
}
else
{
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6 class="card-subtitle mb-2 text-success">@product.Price.ToString("C")</h6>
                        @if (!string.IsNullOrEmpty(product.Description))
                        {
                            <p class="card-text">@product.Description</p>
                        }
                        <div class="mt-3">
                            <p class="mb-1">
                                <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                    @(product.StockQuantity > 0 ? $"In Stock: {product.StockQuantity}" : "Out of Stock")
                                </span>
                            </p>
                            <p class="text-muted small mb-0">
                                Added: @product.CreatedDate.ToLocalTime().ToString("d")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Product>? products;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        products = await DbContext.Products.ToListAsync();
    }
}
